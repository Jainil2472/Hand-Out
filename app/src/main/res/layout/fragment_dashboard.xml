<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">




    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:id="@+id/s_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="-27dp"
            tools:layout_editor_absoluteY="-17dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Services"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp">
            </TextView>

            <ImageView
                android:id="@+id/tiffin"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/y"></ImageView>

            <TextView
                android:layout_width="244dp"
                android:layout_height="68dp"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="130dp"
                android:text="Tiffin"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"></TextView>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/meal"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="80dp">
            </ImageView>

            <ImageView
                android:id="@+id/acrepair"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="170dp"
                android:src="@drawable/b"></ImageView>

            <TextView
                android:layout_width="244dp"
                android:layout_height="68dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="280dp"
                android:text="AC Service and Repair"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold"></TextView>

            <ImageView
                android:layout_width="101dp"
                android:layout_height="107dp"
                android:layout_marginLeft="275dp"
                android:layout_marginTop="250dp"
                android:src="@drawable/service"></ImageView>

            <ImageView
                android:id="@+id/appliance"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="330dp"
                android:src="@drawable/bl">
            </ImageView>

            <TextView
                android:layout_width="244dp"
                android:layout_height="68dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="460dp"
                android:text="Appliance Repair"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"></TextView>

            <ImageView
                android:layout_width="109dp"
                android:layout_height="120dp"
                android:layout_marginLeft="270dp"
                android:layout_marginTop="410dp"
                android:src="@drawable/repair"></ImageView>



            <ImageView
                android:id="@+id/electric"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="490dp"
                android:src="@drawable/r">
            </ImageView>

            <TextView
                android:layout_width="244dp"
                android:layout_height="68dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="625dp"
                android:text="Electrician"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"></TextView>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
            android:src="@drawable/electrician"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="570dp">
        </ImageView>

            <ImageView
                android:id="@+id/plumber"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="650dp"
                android:src="@drawable/g">
            </ImageView>

            <TextView
                android:layout_width="244dp"
                android:layout_height="68dp"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="780dp"
                android:text="Plumber"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"></TextView>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/plumber"
                android:layout_marginLeft="260dp"
                android:layout_marginTop="740dp">
            </ImageView>

        </RelativeLayout>


    </ScrollView>

    <TextView
        android:id="@+id/text_dashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>